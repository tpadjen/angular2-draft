{
  "name": "ang",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "//": "-------------------------------------------------------------------------------",
    "//": "start a live reload server and open it in a browser",
    "//": "-------------------------------------------------------------------------------",
    "start": "live-server --open=build/dev --entry-file=index.html",
    
    "//": "-------------------------------------------------------------------------------",
    "//": "unit testing",
    "//": "-------------------------------------------------------------------------------",
    "test": "./node_modules/karma/bin/karma start",
    
    "//": "-------------------------------------------------------------------------------",
    "//": "e2e testing - run 'npm start' first in separate shell",
    "//": "-------------------------------------------------------------------------------",
    "e2e": "protractor",
    
    "//": "-------------------------------------------------------------------------------",
    "//": "watch",
    "//": "-------------------------------------------------------------------------------",
    "watch": "npm run watch-ts & npm run watch-src",

      "//": "-----------------------------------------------------------------------------",
      "//": "compile typescript on changes",
      "//": "necessary because tsc --w does not currently respond to adding/removing files",
      "//": "-----------------------------------------------------------------------------",
      "watch-ts": "onchange '{build/dev,test}/**/*.ts' -- npm run ts-changed",
      "ts-changed": "npm run tsc",
      "tsc": "tsc",
      
      "//": "-----------------------------------------------------------------------------",
      "//": "automatically copy changed source to build/dev directory",
      "//": "-----------------------------------------------------------------------------",
      "watch-src": "onchange 'src/**/*.*' -- npm run src-changed",
      "src-changed": "npm run sync-dev",
      "sync-dev": "./node_modules/sync-files/bin/sync-files.js src build/dev",

    "//": "-------------------------------------------------------------------------------",
    "//": "misc",
    "//": "-------------------------------------------------------------------------------",
    "clean-dev": "rimraf -rf build/dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "angular2": "2.0.0-alpha.44",
    "ng2-bootstrap": "^0.44.3",
    "systemjs": "0.19.2"
  },
  "devDependencies": {
    "es6-module-loader": "^0.17.8",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.14",
    "karma-chrome-launcher": "^0.2.1",
    "karma-jasmine": "^0.3.6",
    "karma-verbose-reporter": "0.0.3",
    "live-server": "^0.8.2",
    "onchange": "^2.0.0",
    "rimraf": "^2.4.3",
    "sync-files": "^1.0.3",
    "typescript": "^1.6.2"
  }
}
